{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "nginx-router",
      "image": "szaszolak/multi-nginx",
      "esential": true,
      "portMappings": [{
        "containerPort": 80,
        "hostPort": 80
      }],
      "links": ["client", "server"],
      "memory": 512
    },
    {
      "name": "client",
      "image": "szaszolak/multi-client",
      "hostname": "client",
      "esential": false,
      "memory": 128
    },
    {
      "name": "server",
      "image": "szaszolak/multi-server",
      "hostname": "api",
      "esential": false,
      "memory": 128
    },
    {
      "name": "worker",
      "image": "szaszolak/multi-worker",
      "hostname": "worker",
      "esential": false,
      "memory": 128
    }
  ]
}